{
  "name": "financeiro-stratefy",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:lan": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --win",
    "postinstall": "prisma generate"
  },
  "build": {
    "appId": "com.finance.app",
    "productName": "Finance",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/server/**/*",
      ".next/static/**/*",
      "public/**/*",
      "package.json",
      "prisma/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma/dev.db",
        "to": "prisma/dev.db"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@clerk/localizations": "^3.35.3",
    "@clerk/nextjs": "^6.37.3",
    "@clerk/themes": "^2.4.51",
    "@prisma/client": "^6.19.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^6.19.2",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
